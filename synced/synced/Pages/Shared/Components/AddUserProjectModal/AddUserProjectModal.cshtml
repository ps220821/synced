<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="addUserModalLabel">Add User to Project</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form method="post" asp-page="/Dashboard/Users" asp-page-handler="AddUser" class="needs-validation" novalidate>
                <input type="hidden" name="ProjectId" value="@ViewData["ProjectId"]" />
                <div class="mb-3">
                    <label for="userEmail_@ViewData["ProjectId"]" class="form-label">User Email</label>
                    <input type="email" class="form-control" id="userEmail_@ViewData["ProjectId"]" name="NewUserEmail" required placeholder="Enter user email" />
                    <div class="invalid-feedback">Please enter a valid email address</div>
                </div>
                <button type="submit" class="btn btn-primary w-100">Add User</button>
            </form>
        </div>
    </div>
</div>