@page
@model synced.Pages.ProjectsPageModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container m-auto">
    <div class="d-flex flex-column gap-5">
        <div>
            <div class="w-100 d-flex justify-content-between">
                <h2>Your Projects</h2>
                <!-- Add Project button -->
                <button class="btn btn-primary rounded-3" data-bs-toggle="modal" data-bs-target="#addProjectModal">Add project</button>
            </div>

            <div class="mt-3 border-top border-dark"></div>
        </div>

        <div class="d-flex flex-column gap-4">
            @if (Model.Projects != null && Model.Projects.Any())
            {
                @foreach (var project in Model.Projects)
                {
                    <div class="bg-light p-1 rounded-2 border-bottom d-flex justify-content-between align-items-center " style="height: 5rem;">
                        <div class="d-flex flex-row gap-5 w-25 align-items-center justify-content-center h-100">
                            <p class="m-0 fw-bold" style="width: 50px;">@project.Name</p>
                            <p class="m-0" style="width: 50px;">@project.Description</p>
                        </div>
                        <div>
                            <!-- Delete button with POST handler -->
                            <form id="deleteForm" method="post" asp-page-handler="delete">
                                <!-- Verborgen invoerveld voor ProjectId -->
                                <input type="hidden" name="ProjectId" value="@project.Id" />

                                <!-- Verborgen invoerveld voor OwnerId -->
                                <input type="hidden" name="OwnerId" value="@project.Owner" />

                                <!-- Delete knop die de JavaScript functie aanroept, alleen project.Id wordt doorgegeven -->
                                <button type="submit"  class="btn btn-danger w-100">Delete</button>
                            </form>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No projects found.</p>
            }
        </div>
    </div>
</div>

<!-- Modal for Adding a Project -->
<div class="modal fade" id="addProjectModal" tabindex="-1" aria-labelledby="addProjectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addProjectModalLabel">Add New Project</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form for adding the project -->
                <form method="post" asp-page-handler="Add">
                    <div class="mb-3">
                        <label for="ProjectName" class="form-label">Project Name</label>
                        <input type="text" class="form-control" id="ProjectName" name="NewProject.Name" required />
                    </div>
                    <div class="mb-3">
                        <label for="ProjectDescription" class="form-label">Project Description</label>
                        <input type="text" class="form-control" id="ProjectDescription" name="NewProject.Description" required />
                    </div>
                    <div class="mb-3">
                        <label for="Start_Date" class="form-label">Start Date</label>
                        <input type="date" class="form-control" id="Start_Date" name="NewProject.Start_Date" required />
                    </div>
                    <div class="mb-3">
                        <label for="End_Date" class="form-label">End Date</label>
                        <input type="date" class="form-control" id="End_Date" name="NewProject.End_Date" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Add Project</button>
                </form>
            </div>
        </div>
    </div>
</div>
